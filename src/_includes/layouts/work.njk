{% extends 'base.njk' %}

{% block content %}
  <section class="relative w-full h-64 lg:h-128 bg-cover bg-center" style="background-image: url({{ images[0] }});">
    <div class="absolute inset-0 bg-black bg-opacity-40"></div>
  </section>
  <section class="mx-auto py-32 text-center">
    <h1>{{ title }}</h1>
  </section>
  <article class="mx-auto container">
    <div>
      {% for image in images %}
        <img src="{{ image }}" alt="">
        {% endfor %}
      </div>
      <nav aria-labelledby="my-pagination" class="my-8 px-4 lg:px-0">
        <ol class="flex flex-col lg:flex-row justify-between">
          {% if nextPost.url %}
            <li class="py-2">
              <strong>上一页</strong>:
              <a class="next" href="{{ nextPost.url }}">{{ nextPost.data.title }}</a>
            </li>
          {% endif %}
          {% if prevPost.url %}
            <li class="py-2">
              <strong>下一页</strong>:
              <a class="previous" href="{{ prevPost.url }}">{{ prevPost.data.title }}</a>
            </li>
          {% endif %}
        </ol>
      </nav>
    </article>
  {% endblock content %}